#!/bin/bash
ln -s ~/dotfiles/git/.gitconfig ~/.gitconfig
ln -s ~/dotfiles/git/.gitignore ~/.gitignore
ln -s ~/dotfiles/git/.gitk ~/.gitk
ln -s ~/dotfiles/shell/.bashrc ~/.bashrc
ln -s ~/dotfiles/shell/.bash_profile ~/.bash_profile
ln -s ~/dotfiles/shell/.zshenv ~/.zshenv
ln -s ~/dotfiles/shell/.zshrc ~/.zshrc
mkdir -p ~/.config/alacritty
ln -s ~/dotfiles/config/alacritty.yml ~/.config/alacritty/alacritty.yml
mkdir ~/.vim
ln -s ~/dotfiles/vim/.vimrc ~/.vimrc

## macos stuff
[ "$(uname)" == "Darwin" ] && mkdir -p ~/Library/Application\ Support/Code/User \
  && ln -s ~/dotfiles/config/vscode/settings.json ~/Library/Application\ Support/Code/User/settings.json \
  && mkdir -p ~/.config/skhd \
  && ln -s ~/dotfiles/config/mac/skhdrc ~/.config/skhd/skhdrc \
  && mkdir -p ~/.config/limelight \
  && ln -s ~/dotfiles/config/mac/limelightrc ~/.config/limelight/limelightrc \
  && ln -s ~/dotfiles/config/mac/.amethyst ~/.amethyst
